{
  "app": {
    "name": "本地Markdown文件渲染器",
    "version": "1.0.0",
    "description": "基于PyQt5的本地Markdown文件渲染和文档管理工具",
    "author": "LAD Team",
    "default_root_path": "C:\\Users\\kkk",
    "window": {
      "width": 1200,
      "height": 800,
      "min_width": 800,
      "min_height": 600,
      "title": "本地Markdown文件渲染器 v1.0.0"
    }
  },
  "file_tree": {
    "show_hidden_files": false,
    "file_filters": [
      "*.md",
      "*.txt",
      "*.py",
      "*.json"
    ],
    "exclude_patterns": [
      "*.log",
      "*.tmp",
      "__pycache__"
    ],
    "max_file_size": 10485760
  },
  "markdown": {
    "enable_zoom": true,
    "enable_syntax_highlight": true,
    "theme": "default",
    "auto_reload": false,
    "max_content_length": 5242880
  },
  "logging": {
    "level": "INFO",
    "file": "app.log",
    "max_size": 10485760,
    "backup_count": 5
  }
}