{
  "rules": [
    {
      "name": "file_size_limit",
      "boundary_type": "resource",
      "parameter_name": "file_size",
      "min_value": 0,
      "max_value": 104857600,
      "pattern": null,
      "allowed_values": null,
      "validation_level": "strict",
      "error_message": "文件大小超出限制",
      "warning_message": "文件大小较大，可能影响性能",
      "enabled": true
    },
    {
      "name": "memory_usage_limit",
      "boundary_type": "resource",
      "parameter_name": "memory_usage",
      "min_value": 0,
      "max_value": 1073741824,
      "pattern": null,
      "allowed_values": null,
      "validation_level": "normal",
      "error_message": "内存使用超出限制",
      "warning_message": "内存使用较高，建议优化",
      "enabled": true
    },
    {
      "name": "thread_count_limit",
      "boundary_type": "system",
      "parameter_name": "thread_count",
      "min_value": 1,
      "max_value": 100,
      "pattern": null,
      "allowed_values": null,
      "validation_level": "normal",
      "error_message": "线程数量超出限制",
      "warning_message": "线程数量较多，可能影响性能",
      "enabled": true
    },
    {
      "name": "cache_size_limit",
      "boundary_type": "performance",
      "parameter_name": "cache_size",
      "min_value": 100,
      "max_value": 10000,
      "pattern": null,
      "allowed_values": null,
      "validation_level": "loose",
      "error_message": "缓存大小超出限制",
      "warning_message": "缓存大小较大，可能占用过多内存",
      "enabled": true
    },
    {
      "name": "timeout_limit",
      "boundary_type": "performance",
      "parameter_name": "timeout",
      "min_value": 0.1,
      "max_value": 300.0,
      "pattern": null,
      "allowed_values": null,
      "validation_level": "normal",
      "error_message": "超时时间超出限制",
      "warning_message": "超时时间设置不合理",
      "enabled": true
    }
  ]
}