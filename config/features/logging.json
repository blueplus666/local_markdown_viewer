{
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s %(levelname)s [%(name)s] %(message)s",
    "max_size": 10485760,
    "backup_count": 5,
    "correlation_id_enabled": true,
    "handlers": {
      "console": {
        "enabled": true,
        "level": "INFO"
      },
      "file": {
        "enabled": true,
        "path": "logs/lad_markdown_viewer.log",
        "level": "DEBUG"
      }
    },
    "performance": {
      "collect_metrics": true,
      "histogram_bins": [0, 50, 100, 200, 500, 1000, 2000],
      "warning_threshold_ms": 500,
      "critical_threshold_ms": 2000
    },
    "error_handling": {
      "auto_recovery": true,
      "strategy": "graceful",
      "log_errors": true
    }
  }
}
