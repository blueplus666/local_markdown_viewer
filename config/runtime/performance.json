        "status_bar_update_ms": 200,
        "import_duration_ms": 800,
        "render_duration_ms": 3000,
        "memory_usage_mb": 768,
        "cpu_usage_percent": 90
      },
      "critical_thresholds": {
        "status_bar_update_ms": 500,
        "import_duration_ms": 1500,
        "render_duration_ms": 5000,
        "memory_usage_mb": 1024,
        "cpu_usage_percent": 95
      }
    }
  }
}
