{
  "monitoring": {
    "enabled": true,
    "interval_seconds": 60,
    "retention_days": 3,
    "metrics_dir": "local_markdown_viewer/metrics",
    "logs_dir": "local_markdown_viewer/logs",
    "collectors": [
      "performance",
      "errors",
      "usage"
    ],
    "alerts": [
      {
        "name": "HighErrorRate",
        "metric": "errors_per_minute",
        "threshold": 10,
        "duration_minutes": 5,
        "action": "log"
      },
      {
        "name": "HighLatency",
        "metric": "render_latency_ms_p95",
        "threshold": 1200,
        "duration_minutes": 10,
        "action": "log"
      }
    ]
  }
}

