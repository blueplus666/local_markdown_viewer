{
  "deployment": {
    "version": "1.0.0",
    "environment": "production",
    "timestamp": "2025-08-17T18:59:15Z"
  },
  "system_integration": {
    "enabled": true,
    "max_retry_attempts": 3,
    "retry_delay": 1.0,
    "timeout": 30.0,
    "enable_async": true,
    "enable_monitoring": true
  },
  "monitoring": {
    "performance": {
      "enabled": true,
      "interval": 5.0,
      "metrics": ["response_time", "memory_usage", "cpu_usage", "cache_hit_rate"]
    },
    "error": {
      "enabled": true,
      "interval": 1.0,
      "metrics": ["error_rate", "error_count", "error_types"]
    },
    "log": {
      "enabled": true,
      "interval": 10.0,
      "metrics": ["log_volume", "log_levels", "log_sources"]
    },
    "system": {
      "enabled": true,
      "interval": 30.0,
      "metrics": ["disk_usage", "network_io", "process_count"]
    },
    "alert_rules": [
      {
        "metric_name": "memory_usage",
        "condition": ">",
        "threshold": 80,
        "alert_level": "warning",
        "message": "内存使用率过高",
        "enabled": true
      },
      {
        "metric_name": "cpu_usage",
        "condition": ">",
        "threshold": 80,
        "alert_level": "warning",
        "message": "CPU使用率过高",
        "enabled": true
      },
      {
        "metric_name": "error_rate",
        "condition": ">",
        "threshold": 5,
        "alert_level": "error",
        "message": "错误率过高",
        "enabled": true
      },
      {
        "metric_name": "disk_usage",
        "condition": ">",
        "threshold": 90,
        "alert_level": "critical",
        "message": "磁盘使用率过高",
        "enabled": true
      },
      {
        "metric_name": "cache_hit_rate",
        "condition": "<",
        "threshold": 50,
        "alert_level": "warning",
        "message": "缓存命中率过低",
        "enabled": true
      }
    ]
  },
  "performance_benchmark": {
    "test_iterations": 10,
    "warmup_iterations": 3,
    "timeout": 300.0,
    "memory_threshold": 512,
    "cpu_threshold": 80.0,
    "success_rate_threshold": 95.0,
    "performance_regression_threshold": 10.0,
    "test_scenarios": [
      "file_loading",
      "markdown_rendering",
      "cache_performance",
      "error_handling",
      "memory_usage",
      "system_integration"
    ]
  },
  "link_processor_integration": {
    "enable_link_processing": true,
    "link_processing_mode": "async",
    "max_concurrent_links": 10,
    "link_timeout": 30.0,
    "enable_link_validation": true,
    "enable_link_caching": true,
    "link_cache_ttl": 3600,
    "enable_link_analytics": true
  },
  "comparison_analysis": {
    "enable_detailed_analysis": true,
    "enable_swot_analysis": true,
    "enable_priority_ranking": true,
    "enable_impact_assessment": true,
    "enable_effort_estimation": true,
    "analysis_systems": [
      "logging_system",
      "resource_management",
      "architecture_evolution",
      "performance_testing",
      "configuration_management"
    ]
  },
  "data_storage": {
    "metrics_file": "monitoring_data/metrics.json",
    "alerts_file": "monitoring_data/alerts.json",
    "analysis_file": "monitoring_data/analysis.json",
    "benchmark_file": "benchmark_data/results.json",
    "integration_file": "integration_data/status.json"
  },
  "logging": {
    "level": "info",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/system_integration.log",
    "max_size": "10MB",
    "backup_count": 5
  }
} 